<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="51.4dp"
    android:layout_height="45dp">

    <RelativeLayout
        android:layout_width="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_height="25dp">

        <View
            android:id="@+id/today_background"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:visibility="gone"
            android:background="@drawable/today_background" />

        <View
            android:id="@+id/selected_background"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/selected_background"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_date"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="19" />
    </RelativeLayout>


    <ImageView
        android:id="@+id/iv_maker"
        android:layout_width="11dp"
        android:layout_height="11dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/view_mark_background"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_maker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textColor="#999999"
        android:text="跑步机"
        android:textSize="10dp" />
</RelativeLayout>